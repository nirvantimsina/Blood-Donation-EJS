<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notifications | Blood Donor Nepal</title>
  <link rel="icon" type="image/svg+xml" href="/images/blood-donor.png">
  <link rel="stylesheet" href="/css/about.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/login-register.css">
  <link rel="stylesheet" href="/css/notification.css">
</head>

<body>
  <%- include('navbar'); -%>
    <div class="container mt-4">
      <div class="row">
        <% if (notification && notification.length> 0) { %>
          <% notification.forEach(notification=> { %>
            <% let allRemoved=true; %>
              <% if (notification.messages && notification.messages.length> 0) { %>
                <% notification.messages.forEach(msg=> { if (msg.removed !== true) { %>
                  <% allRemoved=false; %>
                    <div class="col-12 mb-3">
                      <div class="card shadow-sm rounded-3">
                        <div class="card-body">
                          <div id="notification-title-close-btn"
                            class="d-flex justify-content-between align-items-center">
                            <div>
                              <h5 class="card-title mb-1">
                                <%= msg.title %>
                              </h5>
                              <small class="text-muted">
                                <%= new Date(msg.createdAt).toLocaleString() %>
                              </small>
                            </div>
                            <form action="/user/remove-notification" method="POST" class="ms-2">
                              <input type="hidden" name="notificationId" value="<%= notification._id %>">
                              <input type="hidden" name="messageId" value="<%= msg.id %>">
                              <button type="submit" class="btn-close" id="notification-close"
                                aria-label="Close"></button>
                            </form>
                          </div>
                          <div class="mt-2">
                            <!-- Button to show more and trigger modal -->
                            <button class="btn btn-primary btn-sm show-more-btn mt-2" data-bs-toggle="modal"
                            data-bs-target="#notificationModal" data-content-id="content-<%= msg.id %>"
                            data-notification-id="<%= notification._id %>" data-message-id="<%= msg.id %>">
                            Show More
                          </button>
                          <% if (!msg.read) { %>
                            <span class="badge bg-warning text-dark">New</span>
                            <% } %>
                                <% if(msg.read){ %>
                                <form id="updateStatusUnreadForm-<%= msg.id %>" action="/user/update-unread-status"
                                  method="POST">
                                  <input type="hidden" name="notificationId" value="<%= notification._id %>">
                                  <input type="hidden" name="messageId" value="<%= msg.id %>">
                                  <button type="button" class="btn btn-warning btn-sm mt-2"
                                    onclick="submitUnreadForm('<%= msg.id %>')">
                                    Mark as Unread
                                  </button>
                                </form>
                                <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Hidden content for the modal -->
                    <div class="d-none" id="content-<%= msg.id %>">
                      <p>
                        <%- msg.message %>
                      </p>
                      <small class="text-muted">Received at: <%= new Date(msg.createdAt).toLocaleString() %></small>
                    </div>
                    <% } }) %>
                      <% } %>
                        <% if (allRemoved) { %>
                          <div class="col-12">
                            <div class="alert alert-info">No notifications available.</div>
                          </div>
                          <% } %>
                            <% }) %>
                              <% } else { %>
                                <div class="col-12">
                                  <div class="alert alert-info">No notifications
                                    available.</div>
                                </div>
                                <% } %>
      </div>
    </div>

    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="notificationModalLabel"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Content will be set via JavaScript -->
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Hidden form to update read status -->
    <form id="updateStatusForm" action="/user/update-read-status" method="POST" class="d-none">
      <input type="hidden" name="notificationId">
      <input type="hidden" name="messageId">
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const modal = document.getElementById('notificationModal');
        const updateStatusForm = document.getElementById('updateStatusForm');


        modal.addEventListener('show.bs.modal', function (event) {
          const button = event.relatedTarget;
          const messageId = button.getAttribute('data-message-id');
          const notificationId = button.getAttribute('data-notification-id');
          const contentId = button.getAttribute('data-content-id');
          const modalTitle = modal.querySelector('.modal-title');
          const modalBody = modal.querySelector('.modal-body');

          // Retrieve the content from the hidden element
          const contentElement = document.getElementById(contentId);
          modalTitle.textContent = button.getAttribute('data-title');
          modalBody.innerHTML = contentElement.innerHTML;

          // Set values in the hidden form
          updateStatusForm.querySelector('input[name="notificationId"]').value = notificationId;
          updateStatusForm.querySelector('input[name="messageId"]').value = messageId;
        });

        modal.addEventListener('hide.bs.modal', function () {
          // Submit the hidden form when the modal is closed
          updateStatusForm.submit();
        });
      });
      function submitUnreadForm(messageId) {
        const form = document.getElementById('updateStatusUnreadForm-' + messageId);
        form.submit();
      }
    </script>
</body>

</html>