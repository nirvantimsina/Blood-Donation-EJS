<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Requests | Blood Donor Nepal</title>
  <link rel="icon" type="image/svg+xml" href="/images/blood-donor.png">
  <link rel="stylesheet" href="/css/about.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/login-register.css">
  <link rel="stylesheet" href="/css/notification.css">
  <link rel="stylesheet" href="/css/request.css">
</head>

<body>
  <%- include('navbar'); -%>
  <div class="container mt-4">
    <div class="row">
      <% if (notification && notification.length > 0) { %>
      <% notification.forEach(notification => { %>
      <% let allPendingOrRemoved = true; %>
      <% if (notification.messages && notification.messages.length > 0) { %>
      <% notification.messages.forEach(msg => { 
              if (msg.type == "request" && msg.status == "pending" && msg.acceptordecline == false) { 
                allPendingOrRemoved = false; %>
      <div class="col-12">
        <div class="notification-item bg-white">
          <h5 class="mb-1">
            <%= msg.title %>
          </h5>
          <p>
            <%= msg.cleanedMessage %>
          </p>
          <div class="d-flex justify-content-left">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmationModal" data-action="accept" data-notificationid="<%= notification._id %>" data-messageid="<%= msg.id %>">
              Accept
            </button>

            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmationModal" data-action="decline" data-notificationid="<%= notification._id %>" data-messageid="<%= msg.id %>">
              Decline
            </button>
          </div>
        </div>
      </div>
      <% } 
            }) %>
      <% } %>
      <% if (allPendingOrRemoved) { %>
      <div class="col-12">
        <div class="alert alert-info">No requests available.</div>
      </div>
      <% } %>
      <% }) %>
      <% } else { %>
      <div class="col-12">
        <div class="alert alert-info">No requests available.</div>
      </div>
      <% } %>
    </div>
  </div>

  <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to <span id="modalAction"></span> this request?
        </div>
        <div class="modal-footer">
          <form id="confirmationForm" action="/user/handle-request" method="POST">
            <input type="hidden" name="notificationId" id="modalNotificationId">
            <input type="hidden" name="messageId" id="modalMessageId">
            <input type="hidden" name="action" id="modalActionInput">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Confirm</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const confirmationModal = document.getElementById('confirmationModal');
    confirmationModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget; 
      const action = button.getAttribute('data-action');
      const notificationId = button.getAttribute('data-notificationid');
      const messageId = button.getAttribute('data-messageid');

      const modalAction = document.getElementById('modalAction');
      const modalActionInput = document.getElementById('modalActionInput');
      const modalNotificationId = document.getElementById('modalNotificationId');
      const modalMessageId = document.getElementById('modalMessageId');

      // Update the modal content
      modalAction.textContent = action;
      modalActionInput.value = action;
      modalNotificationId.value = notificationId;
      modalMessageId.value = messageId;
    });
  </script>
</body>

</html>