<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Requests | Blood Donor Nepal</title>
    <link rel="icon" type="image/svg+xml" href="/images/blood-donor.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a209b08554.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        :root {
            --primary-red: #e63946;
            --dark-red: #c1121f;
            --light-gray: #f8f9fa;
        }

        .request-card {
            border-radius: 10px;
            transition: transform 0.3s;
            border-left: 4px solid var(--primary-red);
            margin-bottom: 20px;
        }

        .request-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .urgent-badge {
            background-color: var(--primary-red);
            color: white;
            font-weight: bold;
        }

        .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-fulfilled {
            background-color: #d4edda;
            color: #155724;
        }

        .blood-group {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--primary-red);
        }

        .btn-delete {
            background-color: #f8d7da;
            color: #721c24;
            border: none;
        }

        .btn-delete:hover {
            background-color: #f5c6cb;
        }

        .hospital-icon {
            color: var(--primary-red);
        }

        .time-badge {
            background-color: #e9ecef;
            color: #495057;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    <%- include('navbar'); -%>
        <% if (message) { %>
            <div class="toast position-fixed bg-success" id="toast-message" role="alert" aria-live="assertive"
                aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fa-solid fa-circle-check fa-sm" style="color: #f0f0f0;"></i>
                        <%= message %>
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"
                        style="color: white;"></button>
                </div>
            </div>
            <% } %>

                <!-- Blood Requests Section -->
                <div class="container mt-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>Blood Requests</h2>
                        <a href="/bloodRequest" class="btn btn-danger">
                            <i class="fas fa-plus me-2"></i> Create New Request
                        </a>
                    </div>

                    <% if (bloodRequests.length> 0) { %>
                        <div class="row">
                            <% bloodRequests.forEach(request=> { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card request-card mb-4">
                                        <div class="card-body">
                                            <!-- Header with status and urgency -->
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <span class="status-badge status-<%= request.status %>">
                                                    <%= request.status.charAt(0).toUpperCase() + request.status.slice(1)
                                                        %>
                                                </span>
                                                <% if (request.urgency==='urgent' ) { %>
                                                    <span class="urgent-badge badge">URGENT</span>
                                                    <% } %>
                                            </div>

                                            <!-- Requester Info -->
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="me-3">
                                                    <i class="fas fa-user-circle fa-2x" style="color: #6c757d;"></i>
                                                </div>
                                                <div>
                                                    <h5 class="card-title mb-0">
                                                        <%= request.fullName %>
                                                    </h5>
                                                    <small class="text-muted">
                                                        <%= request.address %>
                                                    </small>
                                                </div>
                                            </div>

                                            <!-- Blood Group -->
                                            <div class="mb-3">
                                                <span class="blood-group">
                                                    <i class="fas fa-tint me-2"></i>
                                                    <%= request.bloodGroupType %>
                                                </span>
                                                <span class="ms-3">
                                                    <i class="fas fa-syringe me-2"></i>
                                                    <%= request.bloodUnits %> unit(s) needed
                                                </span>
                                            </div>

                                            <!-- Hospital Info -->
                                            <div class="mb-3">
                                                <div class="d-flex align-items-start">
                                                    <i class="fas fa-hospital me-2 mt-1 hospital-icon"></i>
                                                    <div>
                                                        <strong>Hospital:</strong>
                                                        <div>
                                                            <%= request.hospital.split('_')[0] %>
                                                        </div>
                                                        <small class="text-muted">
                                                            <%= request.hospital.split('_')[1] %>
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Additional Info -->

                                            <!-- Footer with time and actions -->
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="time-badge badge" style="color: #111213;">
                                                    <i class="far fa-clock me-1"></i>
                                                    <%= new Date(request.createdAt).toLocaleString() %>
                                                </span>

                                                <% if (request.status==='pending' ) { %>
                                                    <button class="btn btn-sm btn-delete" data-bs-toggle="modal"
                                                        data-bs-target="#deleteModal"
                                                        data-request-id="<%= request._id %>">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </button>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i> No blood requests found. Create your first
                                request!
                            </div>
                            <% } %>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this blood request? This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <form id="deleteForm" method="POST" action="/bloodRequest/deletebloodrequest">
                                    <input type="hidden" id="requestIdToDelete" name="bloodRequestId">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete Request</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // Initialize toast messages
                        function initializeToast() {
                            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
                            var toastList = toastElList.map(function (toastEl) {
                                return new bootstrap.Toast(toastEl);
                            });
                            toastList.forEach(toast => toast.show());
                        }
                        initializeToast();

                        // Handle delete modal
                        const deleteModal = document.getElementById('deleteModal');
                        if (deleteModal) {
                            deleteModal.addEventListener('show.bs.modal', function (event) {
                                const button = event.relatedTarget;
                                const requestId = button.getAttribute('data-request-id');
                                const modalInput = document.getElementById('requestIdToDelete');
                                modalInput.value = requestId;
                            });
                        }
                    });
                </script>
</body>

</html>